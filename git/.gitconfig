[user]
	name = Ramon Niet
	email = Ramon.Niet@gmail.com

[sequence]
    editor             = vim
[diff]
    tool               = vimdiff
    renames            = copies
[merge]
    tool               = vimdiff
    stat               = true
[color]
    ui                 = true
[format]
    pretty             = fuller
[rerere]
    enabled            = true
[advice]
    statusHints        = false
    pushNonFastForward = false
    resolveConflict    = false
    detachedHead       = false
[push]
    default = matching
[alias]
    n                  = clone
    p                  = pull --rebase
    o                  = checkout
    c                  = commit
    s                  = status -sb
    b                  = branch
    l                  = log --pretty=oneline --abbrev-commit --graph --decorate
    ls                 = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
    alias              = "!git config -l | grep alias | cut -c 7-"
